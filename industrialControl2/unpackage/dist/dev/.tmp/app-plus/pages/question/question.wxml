<view class="content"><view class="question_list"><view class="question_title">问题标题：</view><input class="question_input" type="text" value="{{question}}" placeholder="请简明写下你的问题,以'?'结尾" data-event-opts="{{[['input',[['__set_model',['','question','$event',[]]]]]]}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['openPopup',['$event']]]]]}}" class="question_list1" bindtap="__e"><view class="question_list_left"><view class="question_title">选择问题标签：</view><block wx:for="{{checkedList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="question_tags">{{item}}</view></block></view><view class="question_list_right"><image class="question_arrow" src="../../static/img/btn_in@2x.png" mode></image></view></view><view class="question_list1" style="border-bottom:none;"><view class="question_list_left"><view class="question_title">设置悬赏金额：</view><view class="set_money"><view class="money_icon">￥</view><input class="money_input" type="text" data-event-opts="{{[['input',[['__set_model',['','moneyNum','$event',[]]],['inputMoney',['$event']]]]]}}" value="{{moneyNum}}" bindinput="__e"/></view></view><view class="question_list_right"><view class="rest_money">{{"账户余额: ￥"+totalMoeny}}</view></view></view><view class="question_list1"><block wx:for="{{moneyList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['selectMoney',[index]]]]]}}" class="{{['miney_list',(moneyTab==index)?'money_selected':'']}}" bindtap="__e">{{"￥ "+item.label+''}}</view></block></view><view class="textarea_list"><view class="question_title question_title1">问题描述：</view><textarea class="question_textarea" value="{{question_content}}" placeholder="填写问题描述,表达越清楚,越容易获得答案" data-event-opts="{{[['input',[['__set_model',['','question_content','$event',[]]]]]]}}" bindinput="__e"></textarea></view><view class="add_attachment"><image class="add_btn" src="../../static/img/btn_add@2x.jpg" data-event-opts="{{[['tap',[['uploadImg',['$event']]]]]}}" bindtap="__e"></image><block wx:if="{{imgList.length==0}}"><view class="add_tips">点击添加图片</view></block><block wx:for="{{imgList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view><image style="display:inline-block;width:160rpx;height:160rpx;margin-right:20rpx;" src="{{item}}" mode></image></view></block></view><view class="add_attachment" style="border-bottom:none;margin-bottom:50rpx;"><image class="add_btn" src="../../static/img/btn_add@2x.jpg" data-event-opts="{{[['tap',[['uploadVideo',['$event']]]]]}}" bindtap="__e"></image><block wx:if="{{!videoSrc}}"><view class="add_tips">点击添加视频文件</view></block><block wx:if="{{videoSrc}}"><video style="display:inline-block;width:160rpx;height:160rpx;" src="{{videoSrc}}" controls></video></block></view><button class="publish_btn" disabled="{{!iscanPublish}}" data-event-opts="{{[['tap',[['submitBtn',['$event']]]]]}}" bindtap="__e">发 布</button><uni-popup class="ask_popup vue-ref" vue-id="1" type="center" maskClick="false" data-ref="popup" bind:__l="__l" vue-slots="{{['default']}}"><view class="popup_content"><image class="popup_close" src="../../static/img/btn_closed@2x.png" mode data-event-opts="{{[['tap',[['closePopup',['$event']]]]]}}" bindtap="__e"></image><view class="popup_title">选择标签</view><block wx:for="{{tagList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view><view class="popup_list"><view style="font-size:30rpx;color:#333333;">{{item.tag_title}}</view></view><block wx:for="{{item.child}}" wx:for-item="tagsItem" wx:for-index="tagsIndex" wx:key="tagsIndex"><view class="popup_tag_list"><block wx:if="{{tagsItem.is_checked==0}}"><view data-event-opts="{{[['tap',[['checkTag',[index,tagsIndex]]]]]}}" class="popup_label" bindtap="__e">{{tagsItem.tag_title}}</view></block><block wx:if="{{tagsItem.is_checked==1}}"><view data-event-opts="{{[['tap',[['cancelTag',[index,tagsIndex]]]]]}}" class="popup_label .popup_label_selected" bindtap="__e">{{tagsItem.tag_title}}<image class="selected_img" src="../../static/img/icon_babel_selected@2x.png"></image></view></block></view></block></view></block><view class="popup_button"><view data-event-opts="{{[['tap',[['sure_tag',['$event']]]]]}}" class="popup_sure" bindtap="__e">确 定</view><view data-event-opts="{{[['tap',[['reset_tag',['$event']]]]]}}" class="popup_sure popup_reset" bindtap="__e">重 置</view></view></view></uni-popup></view>