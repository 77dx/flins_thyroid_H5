.login_content {
  width: 100%;
  height: 100%;
}
.login_content .headImg {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    display: block;
    margin: 0 auto;
    margin-top: 100rpx;
}
.login_content .login_buttom {
    width: 64%;
    margin: 0 auto;
    padding-top: 90rpx;
}
.login_content .login_buttom .title_text {
      font-size: 28rpx;
      color: #9EB1C4;
      line-height: 60rpx;
}
.login_content .login_buttom .input_content {
      width: 100%;
      position: relative;
}
.login_content .login_buttom .input_content .input_inner {
        width: 100%;
        border-bottom: 1px solid #dfdfdf;
        line-height: 60rpx;
        font-size: 28rpx;
        color: #333333;
        line-height: 60rpx;
        height: 60rpx;
}
.login_content .login_buttom .input_content .resend {
        position: absolute;
        bottom: 0;
        right: 0;
        font-size: 20rpx;
        color: #005cb7;
        line-height: 60rpx;
}
.login_content .login_buttom .login_button {
      width: 100%;
      line-height: 88rpx;
      height: 88rpx;
      margin-top: 80rpx;
      border-radius: 6px;
      background: #005CB7;
      letter-spacing: 4px;
      font-size: 30rpx;
}
input::-webkit-input-placeholder {
  font-size: 56rpx;
  color: #dfdfdf;
}
input::-moz-placeholder {
  font-size: 56rpx;
  color: #dfdfdf;
}
input:-ms-input-placeholder {
  font-size: 56rpx;
  color: #dfdfdf;
}

